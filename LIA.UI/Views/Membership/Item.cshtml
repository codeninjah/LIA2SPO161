@using LIA2Version3.Data.Entities

@model Item

@{
	ViewData["Title"] = "Item";
}

<div class="row">
	<div class="videoplayer col-md-4 col-md-offset-3">
		@if (Model.Link != null)
	{
		<div id="hiddenUrl" hidden="hidden">@Model.Link</div>
		<video id="video" class="video-js vsj-default-skin vjs-big-play-centered vjs-16-9" controls preload="auto"> </video>
		<h4>@Model.Name</h4>
		<p>@Model.Description</p>

}
	</div>
		<div class="col-md-3 col-md-offset-7">
			Test
		</div>
	
</div>



	@section scripts
		{
		<script type="text/javascript">
			$(function () {
				videoJS($("#hiddenUrl").text());
			});
		</script>
	}
