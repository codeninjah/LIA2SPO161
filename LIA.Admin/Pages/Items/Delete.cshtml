@page
@model LIA.Admin.Pages.Items.DeleteModel
@{
	ViewData["Title"] = "Delete";
}
<h2>Delete</h2>
<h4>ItemType</h4>
<h3>Are you sure you want to delete this?</h3>
<a class="btn btn-primary" asp-page="./Index"><span class="glyphicon glyphicon-info-sign"> </span> Back to list</a>
<a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Item.Id"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
<a class="btn btn-warning" asp-page="/Index"><span class="glyphicon glyphicon-list-alt"></span> Dashboard</a>
<div>

	<hr />
	<dl class="dl-horizontal">
		<dd>
			<b>Item name:</b> @Html.DisplayFor(model => model.Item.Name)
		</dd>
		<dd>
			<b>Item link:</b> @Html.DisplayFor(model => model.Item.Link)
		</dd>
		<dd>
			<b>Item type:</b> @Html.DisplayFor(model => model.Item.ItemType)
		</dd>
		<dd>
			<b>Description:</b> @Html.DisplayFor(model => model.Item.Description)
		</dd>
	</dl>
	<form method="post">
		<input type="hidden" asp-for="Item.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
	</form>
</div>
