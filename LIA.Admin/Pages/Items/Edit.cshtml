<a class="btn btn-warning" asp-page="/Index"><span class="glyphicon glyphicon-list-alt"></span> Dashboard</a>

<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@*<input type="hidden" asp-for="Item.Id" />*@
			<input type="hidden" asp-for="Item.Id" />
			<div class="form-group">
				<label asp-for="Item.Name" class="control-label"></label>
				<input asp-for="Item.Name" class="form-control" />
				<span asp-validation-for="Item.Name" class="text-danger"></span>

				<label asp-for="Item.Description" class="control-label"></label>
				<input asp-for="Item.Description" class="form-control" />
				<span asp-validation-for="Item.Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Item.Link" class="control-label"></label>
				<input asp-for="Item.Link" class="form-control" />
				<span asp-validation-for="Item.Link" class="text-danger"></span>
			</div>



			<div class="form-group">
				<label asp-for="Item.ItemTypeId" class="control-label"></label>
				<select asp-for="Item.ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypes"></select>
				<span asp-validation-for="Item.ItemTypeId" class="text-danger"></span>

			</div>

			<div class="form-group">
				<label asp-for="Item.ListItemId" class="control-label"></label>
				<select asp-for="Item.ListItemId" class="form-control" asp-items="ViewBag.ListItems"></select>
			</div>

				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-success" />
				</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
