@page
@model LIA.Admin.Pages.ListItems.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>ItemType</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ListItem.Id" />
			<div class="form-group">
				<label asp-for="ListItem.Name" class="control-label"></label>
				<input asp-for="ListItem.Name" class="form-control" />
				<span asp-validation-for="ListItem.Name" class="text-danger"></span>

				<label asp-for="ListItem.Items" class="control-label"></label>
				<select asp-for="ListItem.Items" class="form-control" asp-items="ViewBag.Items"></select>
				<span asp-validation-for="ListItem.Items" class="text-danger"></span>

				<label asp-for="ListItem.Products" class="control-label"></label>
				<select asp-for="ListItem.Products" class="form-control" asp-items="ViewBag.Products"></select>
				<span asp-validation-for="ListItem.Products" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

