@page
@model LIA.Admin.Pages.ListItems.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ListItems</h4>

<a class="btn btn-primary" asp-page="./Index"><span class="glyphicon glyphicon-info-sign"> </span> Back to list</a>
<a class="btn btn-warning" asp-page="/Index"><span class="glyphicon glyphicon-list-alt"></span> Dashboard</a>

<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ListItem.Name" class="control-label"></label>
				<input asp-for="ListItem.Name" class="form-control" />
				<span asp-validation-for="ListItem.Name" class="text-danger"></span>

				<label asp-for="ListItem.ProductId" class="control-label"></label>
				<select asp-for="ListItem.ProductId" class="form-control" asp-items="ViewBag.Products"></select>
				<span asp-validation-for="ListItem.ProductId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>

